<Page x:Class="Server_Tools.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Server_Tools"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <WrapPanel>
            <Button Height="50" Width="150" Background="Transparent"  Margin="50" Name="UpdateFirmwareButton" Click="UpdateFirmwareButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Resources/icons8-downloading-updates-50.png"/>
                    <TextBlock Text="Update Firmware" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Height="50" Width="150" Background="Transparent " Margin="50" Name="DiskButton" Click="DiskButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Resources/icons8-hdd-64.png"/>
                    <TextBlock Text="Storage" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </WrapPanel>
    </Grid>
</Page>
